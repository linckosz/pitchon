{% extends '/bundles/bruno/quiz/templates/base.twig' %}
{% block frame %}
	<div id="begin_quiz_scan" class="visibility_hidden">
		<script src="{{ _filelatest('/scripts/libs/instascan/instascan.min.js') }}" type="text/javascript"></script>
		<script src="{{ _filelatest('/bruno/quiz/scripts/quiz/scan.js') }}" type="text/javascript"></script>
		<link rel="stylesheet" href="{{ _filelatest('/bruno/quiz/styles/quiz/scan.css') }}" type="text/css" />
	</div>

	<div id="quiz_scan" class="visibility_hidden">
		<div id="quiz_scan_qrcode" class="display_none">
			<div>{{ _trans('quiz', 0, 21, 'html') }}{# Scan QR code #}</div>
			<div id="quiz_scan_qrcode_video">
				<div id="quiz_scan_qrcode_video_tl" class="quiz_scan_qrcode_video_corner"></div>
				<div id="quiz_scan_qrcode_video_tr" class="quiz_scan_qrcode_video_corner"></div>
				<div id="quiz_scan_qrcode_video_bl" class="quiz_scan_qrcode_video_corner"></div>
				<div id="quiz_scan_qrcode_video_br" class="quiz_scan_qrcode_video_corner"></div>
				<div id="quiz_scan_qrcode_video_bar" class="display_none"></div>
				<div id="quiz_scan_qrcode_video_done" class="visibility_hidden">
					<div id="quiz_scan_qrcode_video_done_wait" class="fa fa-clock-o"></div>
				</div>
				<img id="quiz_scan_qrcode_video_flip" src="{{ _filelatest('/bruno/quiz/images/flip.png') }}" class="display_none" />
				<video id="quiz_scan_qrcode_scan" width="100%" height="100%"></video>
			</div>
		</div>
		<div id="quiz_scan_code" class="display_none">
			<div id="quiz_scan_code_or" class="display_none">{{ _trans('quiz', 0, 22, 'html') }}{# or #}</div>
			<div>
				<input type="number" id="quiz_scan_code_text" min="0" max="99999999" placeholder="{{ _trans('quiz', 0, 23, 'js') }}{# Type code #}" /> <span>{{ _trans('quiz', 0, 24, 'html') }}{# GO #}</span>
			</div>
		</div>
	</div>

	<div id="end_quiz_scan" class="visibility_hidden"></div>
{% endblock %}
